<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClubSearch">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="60dp"
        android:layout_height="733dp"
        android:background="#E8E8E8"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/HomeButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                android:contentDescription="@string/home_button_description"
                android:gravity="center_vertical|center_horizontal"
                android:scaleType="fitCenter"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/eventified_logo"
                tools:ignore="ImageContrastCheck" />

            <ImageButton
                android:id="@+id/SearchButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                android:contentDescription="@string/search_button_description"
                android:gravity="center_vertical|center_horizontal"
                android:scaleType="fitCenter"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:src="@drawable/search_grey"
                tools:ignore="ImageContrastCheck" />


        </LinearLayout>


    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="349dp"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/scrollView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"></androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>