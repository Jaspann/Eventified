<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.eventified">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Eventified"
        android:allowBackup="true"
        android:icon="@drawable/eventified_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/eventified_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Eventified"
        tools:replace="android:name">
        <activity
            android:name=".AddUserEvent"
            android:exported="false" />
        <activity
            android:name=".AddClubEvent"
            android:exported="false" />
        <activity
            android:name=".ClubActivity"
            android:exported="false"
            android:label="Club Details"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ClubOwnerActivity"
            android:exported="false"
            android:label="Club Details"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ViewEventActivity"
            android:exported="false"
            android:label="Event Details"
            android:parentActivityName=".ClubOwnerActivity" />
        <activity
            android:name=".EmailConfirmationAmplify"
            android:exported="false" />
        <activity
            android:name=".SignUp"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".Login"
            android:exported="true"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings" />
    </application>

</manifest>